// Niri Configuration - Converted from Hyprland
// https://yalter.github.io/niri/Configuration:-Introduction

// ============================================================
// INPUT
// ============================================================
input {
    keyboard {
        xkb {
            layout "us"
            options "altwin:swap_lalt_lwin,ctrl:nocaps"
        }
        numlock
    }

    touchpad {
        tap
        natural-scroll
        dwt
        dwtp
    }

    mouse {
        // accel-profile "flat"
    }

    // Focus follows mouse
    focus-follows-mouse max-scroll-amount="0%"
}

// ============================================================
// OUTPUTS
// ============================================================
// Run `niri msg outputs` to see your outputs
// Uncomment and configure as needed:
/-output "eDP-1" {
    mode "1920x1080@60.0"
    scale 1.0
    position x=0 y=0
}

// ============================================================
// LAYOUT
// ============================================================
layout {
    // Gaps matching Hyprland (gaps_in: 2, gaps_out: 5)
    gaps 5

    center-focused-column "never"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }

    // Catppuccin Mocha colors (Green gradient from Hyprland)
    focus-ring {
        width 1
        active-gradient from="#a6e3a1" to="#94e2d5" angle=45
        inactive-color "#45475a"
    }

    border {
        off
    }

    shadow {
        on
        softness 20
        spread 3
        offset x=0 y=3
        color "#1a1a1a99"
    }

    struts {
        // top 0
        // bottom 0
    }
}

// ============================================================
// APPEARANCE
// ============================================================
prefer-no-csd

// Window corner radius (like Hyprland rounding: 10)
window-rule {
    geometry-corner-radius 10
    clip-to-geometry true
}

// ============================================================
// SPAWN AT STARTUP
// ============================================================
spawn-at-startup "waybar" "-c" "/home/vincent/.config/niri/waybar-config.jsonc" "-s" "/home/vincent/.config/waybar/style.css"
spawn-at-startup "dunst"
spawn-at-startup "fcitx5" "-d"
spawn-at-startup "blueman-applet"
spawn-at-startup "swww-daemon"
spawn-at-startup "swayosd-server"

// ============================================================
// ENVIRONMENT VARIABLES
// ============================================================
environment {
    XCURSOR_SIZE "24"
    GTK_IM_MODULE "fcitx"
    QT_IM_MODULE "fcitx"
    XMODIFIERS "@im=fcitx"
    SDL_IM_MODULE "fcitx"
    GLFW_IM_MODULE "ibus"
}

// ============================================================
// MISC
// ============================================================
screenshot-path "~/Pictures/screenshot-%Y%m%d-%H%M%S.png"

hotkey-overlay {
    skip-at-startup
}

animations {
    // Smooth animations
    // slowdown 1.0
}

// ============================================================
// WINDOW RULES
// ============================================================
// Firefox PiP
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
}

// WezTerm fix
window-rule {
    match app-id=r#"^org\.wezfurlong\.wezterm$"#
    default-column-width {}
}

// ============================================================
// KEYBINDINGS (macOS Style from Hyprland)
// ============================================================
binds {
    // Show hotkey overlay
    Mod+Shift+Slash { show-hotkey-overlay; }
    Mod+Slash { spawn "/home/vincent/.local/bin/niri-keybinds"; }

    //? ------- Apps ----------------
    Mod+T { spawn "kitty"; }
    Mod+E { spawn "thunar"; }
    Mod+Shift+B { spawn "firefox"; }
    Mod+Shift+C { spawn "zeditor"; }

    // Fuzzel (Spotlight style)
    Mod+Space { spawn "fuzzel"; }
    Mod+Shift+E { spawn "fuzzel"; }
    Mod+V { spawn-sh "cliphist list | fuzzel --dmenu | cliphist decode | wl-copy"; }

    //? ------- Window Management ----------------
    Mod+Q { close-window; }
    Mod+F { toggle-window-floating; }
    Mod+Ctrl+F { fullscreen-window; }
    Mod+Shift+Backspace { spawn "wlogout"; }

    // Focus (arrow keys)
    Mod+Left { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Up { focus-window-up; }
    Mod+Down { focus-window-down; }

    // Focus (vim keys)
    Mod+H { focus-column-left; }
    Mod+L { focus-column-right; }
    Mod+K { focus-window-up; }
    Mod+J { focus-window-down; }

    // Lock screen
    Mod+Shift+L { spawn "swaylock"; }

    // Tab cycling
    Mod+Tab { focus-column-right; }
    Mod+Shift+Tab { focus-column-left; }

    // Move windows
    Mod+Ctrl+Left { move-column-left; }
    Mod+Ctrl+Right { move-column-right; }
    Mod+Ctrl+Up { move-window-up; }
    Mod+Ctrl+Down { move-window-down; }

    Mod+Ctrl+H { move-column-left; }
    Mod+Ctrl+L { move-column-right; }
    Mod+Ctrl+K { move-window-up; }
    Mod+Ctrl+J { move-window-down; }

    // Resize
    Mod+Shift+Left { set-column-width "-5%"; }
    Mod+Shift+Right { set-column-width "+5%"; }
    Mod+Shift+Up { set-window-height "-5%"; }
    Mod+Shift+Down { set-window-height "+5%"; }

    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }

    // Column width presets
    Mod+R { switch-preset-column-width; }
    Mod+Shift+R { switch-preset-window-height; }
    Mod+M { maximize-column; }
    Mod+C { center-column; }

    // Column management
    Mod+BracketLeft { consume-or-expel-window-left; }
    Mod+BracketRight { consume-or-expel-window-right; }
    Mod+Comma { consume-window-into-column; }
    Mod+Period { expel-window-from-column; }

    // Tabbed display
    Mod+W { toggle-column-tabbed-display; }

    //? ------- Workspaces ----------------
    // Navigate by number
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod+0 { focus-workspace 10; }

    // Move window to workspace
    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
    Mod+Shift+6 { move-column-to-workspace 6; }
    Mod+Shift+7 { move-column-to-workspace 7; }
    Mod+Shift+8 { move-column-to-workspace 8; }
    Mod+Shift+9 { move-column-to-workspace 9; }
    Mod+Shift+0 { move-column-to-workspace 10; }

    // Relative workspace navigation
    Ctrl+Right { focus-workspace-down; }
    Ctrl+Left { focus-workspace-up; }
    Mod+Page_Down { focus-workspace-down; }
    Mod+Page_Up { focus-workspace-up; }

    // Move to relative workspace
    Mod+Ctrl+Page_Down { move-column-to-workspace-down; }
    Mod+Ctrl+Page_Up { move-column-to-workspace-up; }

    // Move window to other monitor
    Mod+Shift+Ctrl+Left { move-column-to-monitor-left; }
    Mod+Shift+Ctrl+Right { move-column-to-monitor-right; }

    // Mouse wheel workspace
    Mod+WheelScrollDown cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp cooldown-ms=150 { focus-workspace-up; }

    // Overview
    Mod+O { toggle-overview; }

    //? ------- Hardware Controls ----------------
    // Audio (with swayosd)
    F10 allow-when-locked=true { spawn "swayosd-client" "--output-volume" "mute-toggle"; }
    XF86AudioMute allow-when-locked=true { spawn "swayosd-client" "--output-volume" "mute-toggle"; }
    F11 allow-when-locked=true { spawn "swayosd-client" "--output-volume" "lower"; }
    F12 allow-when-locked=true { spawn "swayosd-client" "--output-volume" "raise"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "lower"; }
    XF86AudioRaiseVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "raise"; }
    XF86AudioMicMute allow-when-locked=true { spawn "swayosd-client" "--input-volume" "mute-toggle"; }

    // Media
    XF86AudioPlay allow-when-locked=true { spawn "playerctl" "play-pause"; }
    XF86AudioPause allow-when-locked=true { spawn "playerctl" "play-pause"; }
    XF86AudioNext allow-when-locked=true { spawn "playerctl" "next"; }
    XF86AudioPrev allow-when-locked=true { spawn "playerctl" "previous"; }

    // Brightness (with swayosd)
    XF86MonBrightnessUp allow-when-locked=true { spawn "swayosd-client" "--brightness" "raise"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "swayosd-client" "--brightness" "lower"; }

    //? ------- Screenshots ----------------
    Print { screenshot; }
    Ctrl+Print { screenshot-screen; }
    Alt+Print { screenshot-window; }

    //? ------- Wallpaper ----------------
    Mod+Alt+Right { spawn-sh "~/.local/bin/wallpaper-switch next"; }
    Mod+Alt+Left { spawn-sh "~/.local/bin/wallpaper-switch prev"; }
    Mod+Alt+Up { spawn-sh "~/.local/bin/wallpaper-switch random"; }

    //? ------- System ----------------
    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
    Mod+Shift+Q { quit; }
    Ctrl+Alt+Delete { quit; }
    Mod+Shift+O { power-off-monitors; }
}
